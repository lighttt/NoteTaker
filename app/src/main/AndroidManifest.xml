<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="np.com.manishtuladhar.notetaker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddNoteActivity" android:parentActivityName=".MainActivity"/>

        <provider
            android:authorities="np.com.manishtuladhar.notetaker"
            android:name="np.com.manishtuladhar.notetaker.data.NoteContentProvider"
            android:exported="false"/>

    </application>

</manifest>